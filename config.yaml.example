# OpenClaw Memory Template - Configuration
# Supports environment variables and variable expansion

# Workspace location (supports $HOME, $USER, etc.)
workspace: $HOME/openclaw-agent

# Memory directory
memory_dir: $WORKSPACE/memory

# Git remote (e.g., origin/main, git@github.com:user/repo.git)
git_remote: origin/main

# MSAM API endpoint
msam_api: http://localhost:3001
msam_api_host: 127.0.0.1
msam_api_port: "3001"

# Logging configuration
log_level: INFO          # DEBUG, INFO, WARN, ERROR, CRITICAL
log_file: .openclaw/logs/openclaw.log

# Health check server
health_host: 0.0.0.0
health_port: 8765

# Environment variable overrides:
# - OPENCLAW_WORKSPACE
# - OPENCLAW_MEMORY_DIR
# - OPENCLAW_GIT_REMOTE
# - OPENCLAW_MSAM_API
# - OPENCLAW_LOG_LEVEL
# - OPENCLAW_LOG_FILE
# - OPENCLAW_HEALTH_HOST
# - OPENCLAW_HEALTH_PORT
